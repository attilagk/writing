{{> header}}
<div class="container">
    <h1>Writing</h1>
    <h3>On the boundaries of scientific thought and academia</h3>
        <hr>
{{#each posts}}
    <div class="post">
        <h3><a href="{{url}}">{{title}}</a></h3>
        {{#if date}}
            <p class="post-meta">
                {{date format="MMMM Do YYYY"}}
            </p>
        {{/if}}
        <p>{{{excerpt characters=100}}}...</p>
    </div>
{{/each}}
</div>
{{> js}}
